{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Debug": {
    "ModelDebuggingEnabled": false
  },
  "NLog": {
    "throwConfigExceptions": true,
    "internalLogLevel": "Warn",
    "internalLogFile": "${basedir}/../../../iTextFormBuilderAPI-internal.log",
    "extensions": [
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],
    "targets": {
      "async": true,
      "ownFile-web": {
        "type": "File",
        "fileName": "${basedir}/../../../iTextFormBuilderAPI-${shortdate}.log",
        "layout": "${longdate} ${uppercase:${level}} [${logger}] ${message} ${exception:format=tostring} || url: ${aspnet-request-url} | action: ${aspnet-mvc-action}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Warn",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "ownFile-web"
      }
    ]
  }
}
