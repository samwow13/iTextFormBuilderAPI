@model iTextFormBuilderAPI.Models.HealthAndWellness.TestRazorDataModels.TestRazorDataInstance

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Assessment Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="globalStyles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <header>
            <div class="title">User Assessment Reports</div>
            <div class="graphic">
                <!-- You can add a logo/graphic here -->
            </div>
        </header>

        <!-- User Information -->
        <div class="full-table-container">
            <h2>User Profiles</h2>
            <table class="full-table">
                <tr>
                    <th>Name</th>
                    <td>@Model.User.Name</td>
                    <th>Email</th>
                    <td>@Model.User.Email</td>
                </tr>
                <tr>
                    <th>User ID</th>
                    <td>@Model.User.Id</td>
                    <th>Created</th>
                    <td>@Model.User.CreatedAt.ToString("MMM dd, yyyy")</td>
                </tr>
                @if (Model.User.Name != "John Doe")
                {
                    <tr>
                        <th>Account Status</th>
                        <td colspan="3">
                            <span class="badge @(Model.User.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.User.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                    </tr>
                }
            </table>
        </div>

        <!-- Preferences -->
        <div class="full-table-container">
            <h2>User Preferences</h2>
            <table class="full-table">
                <tr>
                    <th>Theme</th>
                    <td>@Model.Preferences.Theme</td>
                </tr>
                <tr>
                    <th>Language</th>
                    <td>@Model.Preferences.Language</td>
                </tr>
            </table>
        </div>

        @if (Model.Preferences.Notifications != null)
        {
            <div class="full-table-container">
                <h2>Notification Settings</h2>
                <table class="full-table">
                    <tr>
                        <th>Email Notifications</th>
                        <td>
                            <div class="checkbox-container">
                                <input type="checkbox" @(Model.Preferences.Notifications.Email ? "checked" : "") disabled />
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        }

        <!-- Orders -->
        @if (Model.Orders != null && Model.Orders.Count > 0)
        {
            <div class="full-table-container">
                <h2>Order History</h2>
                <table class="full-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Items</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@order.Items.Count item(s)</td>
                                <td>$@order.Amount.ToString("F2")</td>
                                <td>
                                    <span class="badge @(order.Status == "Completed" ? "bg-success" :
                                                       order.Status == "Pending" ? "bg-warning" : "bg-secondary")">
                                        @order.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</body>
</html>