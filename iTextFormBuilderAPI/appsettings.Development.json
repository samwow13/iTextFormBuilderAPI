{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Debug": {
    "ModelDebuggingEnabled": true
  },
  "NLog": {
    "throwConfigExceptions": true,
    "internalLogLevel": "Info",
    "internalLogFile": "${basedir}/../../../iTextFormBuilderAPI-internal.log",
    "extensions": [
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],
    "targets": {
      "async": true,
      "ownFile-web": {
        "type": "File",
        "fileName": "${basedir}/../../../app_log_${shortdate}.log",
        "layout": "${longdate} ${uppercase:${level}} [${logger}] ${message} ${exception:format=tostring} || url: ${aspnet-request-url} | action: ${aspnet-mvc-action}"
      },
      "console": {
        "type": "Console",
        "layout": "${longdate} ${uppercase:${level}} [${logger}] ${message} ${exception}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "ownFile-web"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "console"
      }
    ]
  }
}
